<!-- app/views/employees/_form.html.erb -->
<div class="mb-3">
  <%= form.label :name, "Name", class: "form-label" %>
  <%= form.text_field :name, class: "form-control", value: @employee&.dig("name") %>
</div>

<div class="mb-3">
  <%= form.label :position, "Position", class: "form-label" %>
  <%= form.text_field :position, class: "form-control", value: @employee&.dig("position") %>
</div>

<div class="mb-3">
  <%= form.label :salary, "Salary", class: "form-label" %>
  <%= form.number_field :salary, class: "form-control", value: @employee&.dig("salary") %>
</div>

<div class="mb-3">
  <%= form.label :date_of_birth, "Date of Birth", class: "form-label" %>
  <%= form.date_field :date_of_birth, class: "form-control", value: @employee&.dig("date_of_birth") %>
</div>

<div class="mb-3">
  <%= form.submit "Submit", class: "btn btn-primary" %>
</div>
